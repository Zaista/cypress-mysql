{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5", "dom"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types":  [
      "cypress", "node"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules", "src/test"]
}
